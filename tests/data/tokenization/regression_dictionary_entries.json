{
  "version": "1.0",
  "description": "Regression tests for dictionary entry recognition and compound split fixes",
  "cases": [
    {
      "id": "decchiage_noun",
      "description": "でっちあげ should be single NOUN",
      "input": "でっちあげ",
      "expected": [
        {"surface": "でっちあげ", "pos": "Noun"}
      ],
      "tags": ["regression", "noun", "L2"]
    },
    {
      "id": "hou_noun",
      "description": "ほう in ほうがいい should be NOUN",
      "input": "ほうがいい",
      "expected": [
        {"surface": "ほう", "pos": "Noun"},
        {"surface": "が", "pos": "Particle"},
        {"surface": "いい", "pos": "Adjective", "lemma": "よい"}
      ],
      "tags": ["regression", "noun", "L1"]
    },
    {
      "id": "kikkake_noun",
      "description": "きっかけ should be single NOUN",
      "input": "きっかけで",
      "expected": [
        {"surface": "きっかけ", "pos": "Noun"},
        {"surface": "で", "pos": "Particle"}
      ],
      "tags": ["regression", "noun", "L2"]
    },
    {
      "id": "ookina_det",
      "description": "大きな should be DET (rentaishi)",
      "input": "大きな議論",
      "expected": [
        {"surface": "大きな", "pos": "Determiner"},
        {"surface": "議論", "pos": "Noun"}
      ],
      "tags": ["regression", "determiner", "L1"]
    },
    {
      "id": "gazen_adv",
      "description": "俄然 should be ADV, not NOUN (compound split fix)",
      "input": "俄然注目",
      "expected": [
        {"surface": "俄然", "pos": "Adverb"},
        {"surface": "注目", "pos": "Noun"}
      ],
      "tags": ["regression", "adverb", "split_fix"]
    },
    {
      "id": "aitsugu_verb",
      "description": "相次ぐ should be VERB",
      "input": "相次ぐ事件",
      "expected": [
        {"surface": "相次ぐ", "pos": "Verb", "lemma": "相次ぐ"},
        {"surface": "事件", "pos": "Noun"}
      ],
      "tags": ["regression", "verb", "L2"]
    },
    {
      "id": "kanemoke_noun",
      "description": "金儲け should be single NOUN",
      "input": "金儲けする",
      "expected": [
        {"surface": "金儲け", "pos": "Noun"},
        {"surface": "する", "pos": "Verb", "lemma": "する"}
      ],
      "tags": ["regression", "noun", "L2"]
    },
    {
      "id": "adana_noun",
      "description": "あだ名 should be single NOUN",
      "input": "あだ名をつける",
      "expected": [
        {"surface": "あだ名", "pos": "Noun"},
        {"surface": "を", "pos": "Particle"},
        {"surface": "つける", "pos": "Verb", "lemma": "つける"}
      ],
      "tags": ["regression", "noun", "L2"]
    },
    {
      "id": "nashikuzushi_noun",
      "description": "なし崩し should be single NOUN",
      "input": "なし崩し的",
      "expected": [
        {"surface": "なし崩し", "pos": "Noun"},
        {"surface": "的", "pos": "Suffix"}
      ],
      "tags": ["regression", "noun", "L2"]
    },
    {
      "id": "tsukeru_verb",
      "description": "つける hiragana should be VERB (not NOUN+AUX split)",
      "input": "つける",
      "expected": [
        {"surface": "つける", "pos": "Verb", "lemma": "つける"}
      ],
      "tags": ["regression", "verb", "hiragana", "L2"]
    }
  ]
}
