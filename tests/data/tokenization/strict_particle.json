{
  "version": "1.0",
  "cases": [
    {
      "id": "nitsuite_compound",
      "description": "について should be recognized as compound particle",
      "input": "日本について",
      "expected": [
        {"surface": "日本", "pos": "Noun"},
        {"surface": "について", "pos": "Particle"}
      ],
      "tags": ["strict", "particle", "compound"]
    },
    {
      "id": "niyotte_compound",
      "description": "によって should be recognized as compound particle",
      "input": "風によって",
      "expected": [
        {"surface": "風", "pos": "Noun"},
        {"surface": "によって", "pos": "Particle"}
      ],
      "tags": ["strict", "particle", "compound"]
    },
    {
      "id": "toshite_compound",
      "description": "として should be recognized as compound particle",
      "input": "代表として",
      "expected": [
        {"surface": "代表", "pos": "Noun"},
        {"surface": "として", "pos": "Particle"}
      ],
      "tags": ["strict", "particle", "compound"]
    },
    {
      "id": "nitaishite_compound",
      "description": "に対して - kanji compound particles split as に + verb",
      "input": "彼に対して",
      "expected": [
        {"surface": "彼", "pos": "Pronoun"},
        {"surface": "に", "pos": "Particle"},
        {"surface": "対して", "pos": "Verb", "lemma": "対する"}
      ],
      "tags": ["strict", "particle", "compound"]
    },
    {
      "id": "pronoun_kore",
      "description": "これ should be recognized as pronoun, 見て as verb te-form",
      "input": "これを見て",
      "expected": [
        {"surface": "これ", "pos": "Pronoun"},
        {"surface": "を", "pos": "Particle"},
        {"surface": "見て", "pos": "Verb", "lemma": "見る"}
      ],
      "tags": ["strict", "pronoun"]
    },
    {
      "id": "pronoun_sore",
      "description": "それ should be recognized as pronoun",
      "input": "それは何ですか",
      "expected": [
        {"surface": "それ", "pos": "Pronoun"},
        {"surface": "は", "pos": "Particle"},
        {"surface": "何", "pos": "Pronoun"},
        {"surface": "です", "pos": "Auxiliary"},
        {"surface": "か", "pos": "Particle"}
      ],
      "tags": ["strict", "pronoun"]
    },
    {
      "id": "pronoun_are",
      "description": "あれ should be recognized as pronoun",
      "input": "あれが欲しい",
      "expected": [
        {"surface": "あれ", "pos": "Pronoun"},
        {"surface": "が", "pos": "Particle"},
        {"surface": "欲しい", "pos": "Adjective"}
      ],
      "tags": ["strict", "pronoun"]
    },
    {
      "id": "pronoun_doko",
      "description": "どこ should be recognized as interrogative pronoun",
      "input": "どこに行く",
      "expected": [
        {"surface": "どこ", "pos": "Pronoun"},
        {"surface": "に", "pos": "Particle"},
        {"surface": "行く", "pos": "Verb"}
      ],
      "tags": ["strict", "pronoun"]
    },
    {
      "id": "number_counter_3nin",
      "description": "3人 with particle で",
      "input": "3人で行く",
      "expected": [
        {"surface": "3人", "pos": "Noun"},
        {"surface": "で", "pos": "Particle"},
        {"surface": "行く", "pos": "Verb"}
      ],
      "tags": ["strict", "number", "counter"]
    },
    {
      "id": "number_counter_100yen",
      "description": "100円 with particle の",
      "input": "100円の商品",
      "expected": [
        {"surface": "100円", "pos": "Noun"},
        {"surface": "の", "pos": "Particle"},
        {"surface": "商品", "pos": "Noun"}
      ],
      "tags": ["strict", "number", "counter"]
    },
    {
      "id": "sentence_ending_kana",
      "description": "Sentence ending particles か + な",
      "input": "行くかな",
      "expected": [
        {"surface": "行く", "pos": "Verb"},
        {"surface": "か", "pos": "Particle"},
        {"surface": "な", "pos": "Particle"}
      ],
      "tags": ["strict", "particle", "sentence_ending"]
    },
    {
      "id": "sentence_ending_yone",
      "description": "Sentence ending particles よ + ね",
      "input": "いいよね",
      "expected": [
        {"surface": "いい", "pos": "Adjective"},
        {"surface": "よ", "pos": "Particle"},
        {"surface": "ね", "pos": "Particle"}
      ],
      "tags": ["strict", "particle", "sentence_ending"]
    }
  ]
}
