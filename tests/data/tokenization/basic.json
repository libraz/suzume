{
  "version": "1.0",
  "description": "Basic tokenization tests",
  "cases": [
    {
      "id": "analyze_hiragana",
      "description": "こんにちは - greeting",
      "input": "こんにちは",
      "expected": [
        {
          "surface": "こんにちは",
          "pos": "Other",
          "lemma": "こんにちは"
        }
      ],
      "tags": [
        "basic",
        "hiragana"
      ]
    },
    {
      "id": "edge_single_hiragana",
      "description": "あ - single hiragana",
      "input": "あ",
      "expected": [
        {
          "surface": "あ",
          "pos": "Other"
        }
      ],
      "tags": [
        "basic",
        "edge-case"
      ]
    },
    {
      "id": "conjunction_nimokakawarazu",
      "description": "にもかかわらず should be single Conjunction",
      "input": "にもかかわらず",
      "expected": [
        {
          "surface": "にもかかわらず",
          "pos": "Conjunction"
        }
      ],
      "tags": [
        "conjunction"
      ]
    },
    {
      "id": "symbol_quotation",
      "description": "「こんにちは」- should recognize こんにちは",
      "input": "「こんにちは」",
      "expected": [
        {
          "surface": "こんにちは",
          "pos": "Other"
        }
      ],
      "tags": [
        "strict",
        "symbol"
      ]
    },
    {
      "id": "sumimasen_single",
      "description": "すみません should be single token",
      "input": "すみません",
      "expected": [
        {
          "surface": "すみません",
          "pos": "Other",
          "lemma": "すみません"
        }
      ],
      "tags": [
        "strict",
        "greeting"
      ]
    },
    {
      "id": "d3_tatoeba",
      "description": "D3: たとえば should be CONJ, not たとえ+ば",
      "input": "たとえば日本",
      "expected": [
        {
          "surface": "たとえば",
          "pos": "Conjunction",
          "lemma": "たとえば"
        },
        {
          "surface": "日本",
          "pos": "Noun"
        }
      ],
      "tags": [
        "d3_fix",
        "conjunction",
        "regression"
      ]
    },
    {
      "id": "d3_mashite",
      "description": "D3: まして should be CONJ, not まし+て (suru verb misrecognition)",
      "input": "まして無理",
      "expected": [
        {
          "surface": "まして",
          "pos": "Conjunction",
          "lemma": "まして"
        },
        {
          "surface": "無理",
          "pos": "Adjective"
        }
      ],
      "tags": [
        "d3_fix",
        "conjunction",
        "regression"
      ]
    }
  ]
}