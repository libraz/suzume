{
  "version": "1.0",
  "description": "Basic tokenization tests",
  "cases": [
    {
      "id": "analyze_hiragana",
      "description": "こんにちは - greeting",
      "input": "こんにちは",
      "expected": [
        {
          "surface": "こんにちは",
          "pos": "Other",
          "lemma": "こんにちは"
        }
      ],
      "tags": [
        "basic",
        "hiragana"
      ]
    },
    {
      "id": "edge_single_hiragana",
      "description": "あ - single hiragana",
      "input": "あ",
      "expected": [
        {
          "surface": "あ",
          "pos": "Other"
        }
      ],
      "tags": [
        "basic",
        "edge-case"
      ]
    },
    {
      "id": "conjunction_nimokakawarazu",
      "description": "にもかかわらず should be single Conjunction",
      "input": "にもかかわらず",
      "expected": [
        {
          "surface": "にもかかわらず",
          "pos": "Conjunction"
        }
      ],
      "tags": [
        "conjunction"
      ]
    },
    {
      "id": "symbol_quotation",
      "description": "「こんにちは」- should recognize こんにちは",
      "input": "「こんにちは」",
      "expected": [
        {
          "surface": "こんにちは",
          "pos": "Other"
        }
      ],
      "tags": [
        "strict",
        "symbol"
      ]
    },
    {
      "id": "sumimasen_single",
      "description": "すみません should be single token",
      "input": "すみません",
      "expected": [
        {
          "surface": "すみません",
          "pos": "Other",
          "lemma": "すみません"
        }
      ],
      "tags": [
        "strict",
        "greeting"
      ]
    },
    {
      "id": "d3_tatoeba",
      "description": "D3: たとえば should be CONJ, not たとえ+ば",
      "input": "たとえば日本",
      "expected": [
        {
          "surface": "たとえば",
          "pos": "Conjunction",
          "lemma": "たとえば"
        },
        {
          "surface": "日本",
          "pos": "Noun"
        }
      ],
      "tags": [
        "d3_fix",
        "conjunction",
        "regression"
      ]
    },
    {
      "id": "d3_mashite",
      "description": "D3: まして should be CONJ, not まし+て (suru verb misrecognition)",
      "input": "まして無理",
      "expected": [
        {
          "surface": "まして",
          "pos": "Conjunction",
          "lemma": "まして"
        },
        {
          "surface": "無理",
          "pos": "Adjective"
        }
      ],
      "tags": [
        "d3_fix",
        "conjunction",
        "regression"
      ]
    },
    {
      "id": "conj_tokoroga",
      "description": "ところが should be CONJ, not ところ+が split",
      "input": "ところが彼は来なかった",
      "expected": [
        {"surface": "ところが", "pos": "Conjunction"},
        {"surface": "彼", "pos": "Pronoun"},
        {"surface": "は", "pos": "Particle"},
        {"surface": "来なかった", "pos": "Verb", "lemma": "来る"}
      ],
      "tags": ["conjunction", "split_prevention"]
    },
    {
      "id": "conj_aruiha",
      "description": "あるいは should be CONJ, not ADJ+は split",
      "input": "あるいは違うかも",
      "expected": [
        {"surface": "あるいは", "pos": "Conjunction", "lemma": "或いは"},
        {"surface": "違う", "pos": "Verb"},
        {"surface": "か", "pos": "Particle"},
        {"surface": "も", "pos": "Particle"}
      ],
      "tags": ["conjunction", "split_prevention"]
    },
    {
      "id": "conj_sonnara",
      "description": "そんなら should be CONJ, not そんな+ら split",
      "input": "そんなら行こう",
      "expected": [
        {"surface": "そんなら", "pos": "Conjunction"},
        {"surface": "行こう", "pos": "Verb", "lemma": "行く"}
      ],
      "tags": ["conjunction", "split_prevention"]
    },
    {
      "id": "conj_sorenishitemo",
      "description": "それにしても should be CONJ, not それ+に+して+も split",
      "input": "それにしても高い",
      "expected": [
        {"surface": "それにしても", "pos": "Conjunction"},
        {"surface": "高い", "pos": "Adjective"}
      ],
      "tags": ["conjunction", "split_prevention"]
    },
    {
      "id": "conj_iwaba",
      "description": "いわば should be CONJ, not OTHER split",
      "input": "いわば奇跡だ",
      "expected": [
        {"surface": "いわば", "pos": "Conjunction", "lemma": "言わば"},
        {"surface": "奇跡", "pos": "Noun"},
        {"surface": "だ", "pos": "Auxiliary"}
      ],
      "tags": ["conjunction", "split_prevention"]
    }
  ]
}