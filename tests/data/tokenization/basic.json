{
  "version": "1.0",
  "description": "Basic tokenization tests",
  "cases": [
    {
      "id": "analyze_hiragana",
      "description": "こんにちは - greeting",
      "input": "こんにちは",
      "expected": [
        {
          "surface": "こんにちは",
          "pos": "Other",
          "lemma": "こんにちは"
        }
      ],
      "tags": [
        "basic",
        "hiragana"
      ]
    },
    {
      "id": "edge_single_hiragana",
      "description": "あ - single hiragana",
      "input": "あ",
      "expected": [
        {
          "surface": "あ",
          "pos": "Other"
        }
      ],
      "tags": [
        "basic",
        "edge-case"
      ]
    },
    {
      "id": "conjunction_nimokakawarazu",
      "description": "にもかかわらず should be single Conjunction",
      "input": "にもかかわらず",
      "expected": [
        {
          "surface": "にもかかわらず",
          "pos": "Conjunction"
        }
      ],
      "tags": [
        "conjunction"
      ]
    },
    {
      "id": "symbol_quotation",
      "description": "「こんにちは」- should recognize こんにちは",
      "input": "「こんにちは」",
      "expected": [
        {
          "surface": "こんにちは",
          "pos": "Other"
        }
      ],
      "tags": [
        "strict",
        "symbol"
      ]
    },
    {
      "id": "sumimasen_single",
      "description": "すみません should be single token",
      "input": "すみません",
      "expected": [
        {
          "surface": "すみません",
          "pos": "Other",
          "lemma": "すみません"
        }
      ],
      "tags": [
        "strict",
        "greeting"
      ]
    }
  ]
}