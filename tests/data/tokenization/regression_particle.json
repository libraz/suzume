{
  "version": "1.0",
  "cases": [
    {
      "id": "wo_particle_separation",
      "description": "を should be recognized as separate particle",
      "input": "本をなくした",
      "expected": [
        {"surface": "本", "pos": "Noun"},
        {"surface": "を", "pos": "Particle"},
        {"surface": "なくした", "pos": "Verb", "lemma": "なくす"}
      ],
      "tags": ["regression", "particle", "wo"]
    },
    {
      "id": "wo_not_merged_with_verb",
      "description": "を should not be merged with verb, なくして is unified te-form",
      "input": "をなくして",
      "expected": [
        {"surface": "を", "pos": "Particle"},
        {"surface": "なくして", "pos": "Verb", "lemma": "なくす"}
      ],
      "tags": ["regression", "particle", "wo"]
    },
    {
      "id": "wo_in_complex_sentence",
      "description": "を should be separate particle in complex sentence",
      "input": "昨日買ったばかりの本をなくしてしまった",
      "expected": [
        {"surface": "昨日", "pos": "Noun"},
        {"surface": "買った", "pos": "Verb", "lemma": "買う"},
        {"surface": "ばかり", "pos": "Particle"},
        {"surface": "の", "pos": "Particle"},
        {"surface": "本", "pos": "Noun"},
        {"surface": "を", "pos": "Particle"},
        {"surface": "なくしてしまった", "pos": "Verb", "lemma": "なくす"}
      ],
      "tags": ["regression", "particle", "wo", "complex"]
    },
    {
      "id": "node_lemma",
      "description": "ので lemma should be ので, not のる",
      "input": "ので",
      "expected": [
        {"surface": "ので", "pos": "Particle", "lemma": "ので"}
      ],
      "tags": ["regression", "particle", "node"]
    },
    {
      "id": "node_in_sentence",
      "description": "ので in sentence - ている splits to て+いる, verb+そう splits",
      "input": "電車が遅れているので遅刻しそうです",
      "expected": [
        {"surface": "電車", "pos": "Noun"},
        {"surface": "が", "pos": "Particle"},
        {"surface": "遅れて", "pos": "Verb", "lemma": "遅れる"},
        {"surface": "いる", "pos": "Auxiliary", "lemma": "いる"},
        {"surface": "ので", "pos": "Particle"},
        {"surface": "遅刻し", "pos": "Verb", "lemma": "遅刻する"},
        {"surface": "そう", "pos": "Adverb"},
        {"surface": "です", "pos": "Auxiliary"}
      ],
      "tags": ["regression", "particle", "node", "complex"]
    },
    {
      "id": "particle_filter_ie_ni_imasu",
      "description": "家にいます - existential verb いる (to be at home)",
      "input": "家にいます",
      "expected": [
        {"surface": "家", "pos": "Noun"},
        {"surface": "に", "pos": "Particle"},
        {"surface": "います", "pos": "Verb", "lemma": "いる"}
      ],
      "tags": ["regression", "particle", "filter"]
    },
    {
      "id": "particle_filter_kane_ga_nai",
      "description": "金がない should be split as 金 + が + ない",
      "input": "金がない",
      "expected": [
        {"surface": "金", "pos": "Noun"},
        {"surface": "が", "pos": "Particle"},
        {"surface": "ない", "pos": "Auxiliary"}
      ],
      "tags": ["regression", "particle", "filter"]
    },
    {
      "id": "kurai_degree_particle",
      "description": "くらい should be particle (degree), not 暗い adjective",
      "input": "これくらい",
      "expected": [
        {"surface": "これ", "pos": "Pronoun"},
        {"surface": "くらい", "pos": "Particle"}
      ],
      "tags": ["regression", "particle", "kurai"]
    },
    {
      "id": "gurai_degree_particle",
      "description": "ぐらい (voiced form of くらい) degree particle",
      "input": "これぐらい",
      "expected": [
        {"surface": "これ", "pos": "Pronoun"},
        {"surface": "ぐらい", "pos": "Particle"}
      ],
      "tags": ["regression", "particle", "gurai"]
    },
    {
      "id": "nante_belittling_particle",
      "description": "なんて belittling/surprise particle",
      "input": "なんて言うの",
      "expected": [
        {"surface": "なんて", "pos": "Particle"},
        {"surface": "言う", "pos": "Verb"},
        {"surface": "の", "pos": "Particle"}
      ],
      "tags": ["regression", "particle", "nante"]
    },
    {
      "id": "tteba_emphatic_particle",
      "description": "ってば emphatic final particle",
      "input": "もうってば",
      "expected": [
        {"surface": "もう", "pos": "Adverb"},
        {"surface": "ってば", "pos": "Particle"}
      ],
      "tags": ["regression", "particle", "tteba"]
    },
    {
      "id": "ttara_topic_particle",
      "description": "ったら topic/exclamation particle",
      "input": "あなたったら",
      "expected": [
        {"surface": "あなた", "pos": "Pronoun"},
        {"surface": "ったら", "pos": "Particle"}
      ],
      "tags": ["regression", "particle", "ttara"]
    }
  ]
}
