{
  "version": "1.0",
  "description": "Tests for irregular adjectives (いい/よい/良い)",
  "cases": [
    {
      "id": "ii_base_form",
      "description": "いい should be recognized as Adjective with lemma よい",
      "input": "いい",
      "expected": [
        {"surface": "いい", "pos": "Adjective", "lemma": "よい"}
      ],
      "tags": ["irregular", "i_adjective", "ii"]
    },
    {
      "id": "ii_tenki",
      "description": "いい天気 - いい as attributive form",
      "input": "いい天気",
      "expected": [
        {"surface": "いい", "pos": "Adjective", "lemma": "よい"},
        {"surface": "天気", "pos": "Noun"}
      ],
      "tags": ["irregular", "i_adjective", "ii"]
    },
    {
      "id": "yoi_base_form",
      "description": "よい should be recognized as Adjective",
      "input": "よい",
      "expected": [
        {"surface": "よい", "pos": "Adjective", "lemma": "よい"}
      ],
      "tags": ["irregular", "i_adjective", "yoi"]
    },
    {
      "id": "yokatta_past",
      "description": "よかった (past form) - lemma is 良い (kanji form registered in dictionary)",
      "input": "よかった",
      "expected": [
        {"surface": "よかった", "pos": "Adjective", "lemma": "良い"}
      ],
      "tags": ["irregular", "i_adjective", "yoi", "past"]
    },
    {
      "id": "yokunai_negative",
      "description": "よくない (negative form) - lemma is 良い",
      "input": "よくない",
      "expected": [
        {"surface": "よくない", "pos": "Adjective", "lemma": "良い"}
      ],
      "tags": ["irregular", "i_adjective", "yoi", "negative"]
    },
    {
      "id": "yokute_te_form",
      "description": "よくて splits into よく + て (adverbial + particle)",
      "input": "よくて",
      "expected": [
        {"surface": "よく", "pos": "Adjective", "lemma": "良い"},
        {"surface": "て", "pos": "Particle"}
      ],
      "tags": ["irregular", "i_adjective", "yoi", "te_form"]
    },
    {
      "id": "yokereba_conditional",
      "description": "よければ (conditional) - lemma is 良い",
      "input": "よければ",
      "expected": [
        {"surface": "よければ", "pos": "Adjective", "lemma": "良い"}
      ],
      "tags": ["irregular", "i_adjective", "yoi", "conditional"]
    },
    {
      "id": "yoku_adverbial",
      "description": "よく (adverbial form) - lemma is 良い",
      "input": "よく分かる",
      "expected": [
        {"surface": "よく", "pos": "Adjective", "lemma": "良い"},
        {"surface": "分かる", "pos": "Verb"}
      ],
      "tags": ["irregular", "i_adjective", "yoi", "adverbial"]
    },
    {
      "id": "ii_desu_polite",
      "description": "いいです - polite form with いい",
      "input": "いいです",
      "expected": [
        {"surface": "いい", "pos": "Adjective", "lemma": "よい"},
        {"surface": "です", "pos": "Auxiliary"}
      ],
      "tags": ["irregular", "i_adjective", "ii", "polite"]
    },
    {
      "id": "yokatta_desu_polite_past",
      "description": "よかったです - polite past form, lemma is 良い",
      "input": "よかったです",
      "expected": [
        {"surface": "よかった", "pos": "Adjective", "lemma": "良い"},
        {"surface": "です", "pos": "Auxiliary"}
      ],
      "tags": ["irregular", "i_adjective", "yoi", "polite", "past"]
    },
    {
      "id": "ii_yone_particle",
      "description": "いいよね - with sentence-ending particles",
      "input": "いいよね",
      "expected": [
        {"surface": "いい", "pos": "Adjective", "lemma": "よい"},
        {"surface": "よ", "pos": "Particle"},
        {"surface": "ね", "pos": "Particle"}
      ],
      "tags": ["irregular", "i_adjective", "ii", "particle"]
    },
    {
      "id": "yosa_nominalization",
      "description": "よさ (nominalization) - NOUN derived from よい (良い)",
      "input": "よさ",
      "expected": [
        {"surface": "よさ", "pos": "Noun", "lemma": "良い"}
      ],
      "tags": ["irregular", "i_adjective", "yoi", "nominalization"]
    }
  ]
}
