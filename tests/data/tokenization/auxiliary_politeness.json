{
  "version": "1.0",
  "description": "Politeness auxiliaries (ます、です)",
  "cases": [
    {
      "id": "analyze_multiple_sentences",
      "description": "今日は天気です",
      "input": "今日は天気です",
      "expected": [
        {
          "surface": "今日",
          "pos": "Noun"
        },
        {
          "surface": "は",
          "pos": "Particle"
        },
        {
          "surface": "天気",
          "pos": "Noun"
        },
        {
          "surface": "です",
          "pos": "Auxiliary"
        }
      ],
      "tags": [
        "basic",
        "sentence"
      ]
    },
    {
      "id": "bug_desune",
      "description": "いいですね - should have です + ね",
      "input": "いいですね",
      "expected": [
        {
          "surface": "いい",
          "pos": "Adjective"
        },
        {
          "surface": "です",
          "pos": "Auxiliary"
        },
        {
          "surface": "ね",
          "pos": "Particle"
        }
      ],
      "tags": [
        "basic"
      ]
    },
    {
      "id": "bug_nagakatta",
      "description": "長かったです - adjective past form",
      "input": "長かったです",
      "expected": [
        {
          "surface": "長かった",
          "pos": "Adjective",
          "lemma": "長い"
        },
        {
          "surface": "です",
          "pos": "Auxiliary"
        }
      ],
      "tags": [
        "basic"
      ]
    },
    {
      "id": "bug_manandeimasu",
      "description": "学んでいます - verb with progressive",
