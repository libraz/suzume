    {
      "id": "aux_desu",
      "description": "Copula です",
      "input": "これは本です",
      "expected": [
        {
          "surface": "これ",
          "pos": "Pronoun"
        },
        {
          "surface": "は",
          "pos": "Particle"
        },
        {
          "surface": "本",
          "pos": "Noun"
        },
        {
          "surface": "です",
          "pos": "Auxiliary"
        }
      ],
      "tags": [
        "auxiliary",
        "copula"
      ]
    },
    {
      "id": "kanji_copula_not_compound",
      "description": "神だった - should split noun + copula (not compound)",
      "input": "神だった",
      "expected": [
        {
          "surface": "神",
          "pos": "Noun"
        },
        {
          "surface": "だった",
          "pos": "Auxiliary",
          "lemma": "だった"
        }
      ],
      "tags": [
        "copula",
        "not_compound"
      ]
    },
    {
