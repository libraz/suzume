{
  "version": "1.0",
  "cases": [
    {
      "id": "taberu_lemma",
      "description": "食べる lemma should be 食べる",
      "input": "食べる",
      "expected": [
        {"surface": "食べる", "pos": "Verb", "lemma": "食べる"}
      ],
      "tags": ["strict", "verb", "lemma"]
    },
    {
      "id": "gohan_wo_taberu",
      "description": "ご飯を食べる - verb lemma should not be 食ぶ",
      "input": "ご飯を食べる",
      "expected": [
        {"surface": "ご", "pos": "Prefix"},
        {"surface": "飯", "pos": "Noun"},
        {"surface": "を", "pos": "Particle"},
        {"surface": "食べる", "pos": "Verb", "lemma": "食べる"}
      ],
      "tags": ["strict", "verb", "lemma"]
    },
    {
      "id": "tsuke_not_split",
      "description": "付けで should not split into 付 + け",
      "input": "付けで",
      "expected": [
        {"surface": "付け", "pos": "Noun"},
        {"surface": "で", "pos": "Particle"}
      ],
      "tags": ["strict", "suffix"]
    },
    {
      "id": "hizuke_de",
      "description": "日付けで - 付け should not split",
      "input": "日付けで",
      "expected": [
        {"surface": "日付け", "pos": "Noun"},
        {"surface": "で", "pos": "Particle"}
      ],
      "tags": ["strict", "suffix"]
    },
    {
      "id": "ikaga_single",
      "description": "いかが should be single token",
      "input": "いかが",
      "expected": [
        {"surface": "いかが", "pos": "Adverb"}
      ],
      "tags": ["strict", "interrogative"]
    },
    {
      "id": "doushite_single",
      "description": "どうして should be single token",
      "input": "どうして",
      "expected": [
        {"surface": "どうして", "pos": "Adverb"}
      ],
      "tags": ["strict", "interrogative"]
    },
    {
      "id": "yoroshiku_single",
      "description": "よろしく should be single token",
      "input": "よろしく",
      "expected": [
        {"surface": "よろしく", "pos": "Adverb"}
      ],
      "tags": ["strict", "common"]
    },
    {
      "id": "gohan_lemma",
      "description": "ご飯 splits into prefix + noun",
      "input": "ご飯",
      "expected": [
        {"surface": "ご", "pos": "Prefix", "lemma": "ご"},
        {"surface": "飯", "pos": "Noun", "lemma": "飯"}
      ],
      "tags": ["strict", "noun", "lemma"]
    },
    {
      "id": "ocha_lemma",
      "description": "お茶 splits into prefix + noun",
      "input": "お茶",
      "expected": [
        {"surface": "お", "pos": "Prefix", "lemma": "お"},
        {"surface": "茶", "pos": "Noun", "lemma": "茶"}
      ],
      "tags": ["strict", "noun", "lemma"]
    },
    {
      "id": "konnichiwa_lemma",
      "description": "こんにちは lemma should be こんにちは",
      "input": "こんにちは",
      "expected": [
        {"surface": "こんにちは", "pos": "Other", "lemma": "こんにちは"}
      ],
      "tags": ["strict", "greeting", "lemma"]
    }
  ]
}
